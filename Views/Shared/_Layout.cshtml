<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sri Kaliyuga Ranganathar Temple</title>
    <link rel="icon" type="image/x-icon" href="~/images/final_logo.jpg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600&family=Lora:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark temple-nav">
            <div class="container">
                <a class="navbar-brand temple-logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/final_logo.jpg" alt="Temple Logo" class="temple-logo-img">
                    <span>Sri Kaliyuga Ranganathar Temple</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Seva & Pooja
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Seva" asp-action="Index">Seva Details</a></li>
                                <li><a class="dropdown-item" asp-controller="Seva" asp-action="Book">Book Seva</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Events" asp-action="Index">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Donation" asp-action="Index">Donate</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="temple-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>Sri Kaliyuga Ranganathar Temple</h5>
                    <p>Dedicated to the service of Lord Venkateswara and the spiritual upliftment of devotees.</p>
                    <div class="social-links">
                        <a href="https://youtube.com/@@kalkiavatharasthalam9015?si=yYcyP2gf7F468vMC" target="_blank"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                        <li><a asp-controller="Seva" asp-action="Index">Seva & Pooja</a></li>
                        <li><a asp-controller="Events" asp-action="Index">Events</a></li>
                        <li><a asp-controller="Donation" asp-action="Index">Donate</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Contact Info</h5>
                    <p><i class="fas fa-map-marker-alt"></i> Karuppasamy kovil Thottam, Nagalur, Tamil Nadu 638502</p>
                    <p><i class="fas fa-phone"></i> +91 9842760553</p>
                    <p><i class="fas fa-envelope"></i> kalkiavatharasthalam@gmail.com</p>
                </div>
            </div>
            <hr class="footer-divider">
            <div class="row">
                <div class="col-12 text-center">
                    <p>&copy; @DateTime.Now.Year Sri Kaliyuga Ranganathar Temple Trust. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>